@model Mission06_Blake.Models.Movie

<h2>Delete Movie</h2>
<hr />
<h4>Are you sure you want to delete this movie?</h4>

<dl class="row">
    <dt class="col-sm-2">
        Title
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Title)
    </dd>
    <dt class="col-sm-2">
        Category
    </dt>
    <dd class="col-sm-10">
        @Model.Category?.CategoryName
    </dd>
    <dt class="col-sm-2">
        Director
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Director)
    </dd>
    <dt class="col-sm-2">
        Year
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Year)
    </dd>
    <dt class="col-sm-2">
        Rating
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Rating)
    </dd>
    <dt class="col-sm-2">
        Edited
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Edited)
    </dd>
    <dt class="col-sm-2">
        Copied To Plex
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CopiedToPlex)
    </dd>
    <dt class="col-sm-2">
        Lent To
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.LentTo)
    </dd>
    <dt class="col-sm-2">
        Notes
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Notes)
    </dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" asp-for="MovieId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>