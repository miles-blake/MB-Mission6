@model Mission06_Blake.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<h2>Edit Movie</h2>

<!-- If you're already in the Movies folder, just asp-action="Edit" is enough.
     If you want to be explicit, you could do:
     <form asp-controller="Movies" asp-action="Edit" method="post"> -->
<form asp-action="Edit" method="post">
    <!-- 1) Hidden field for MovieId (primary key) -->
    <input type="hidden" asp-for="MovieId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" type="number" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Edited">Edited?</label>
        <input asp-for="Edited" type="checkbox" />
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CopiedToPlex">Copied To Plex?</label>
        <input asp-for="CopiedToPlex" type="checkbox" />
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LentTo"></label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
