@model IEnumerable<Mission06_Blake.Models.Movie>

<h2>Movie Collection</h2>
<a class="btn btn-primary" asp-action="Create">Add a Movie</a>

<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Director</th>
        <th>Year</th>
        <th>Rating</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Category</td>
            <td>@movie.Director</td>
            <td>@movie.Year</td>
            <td>@movie.Rating</td>
        </tr>
    }
    </tbody>
</table>
